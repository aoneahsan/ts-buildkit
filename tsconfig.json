{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "baseUrl": "./",
    "paths": {
      "@types/*": ["./src/types/*"],
      "@enums/*": ["./src/enums/*"],
      "@utils/*": ["./src/utils/*"]
    },

    "types": ["vitest/globals", "vitest/importMeta"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  "compileOnSave": true,
  "exclude": ["node_modules", ".history", "*ignore*", ".vscode", ".git"],
  "include": ["./src", "./tests"]
}
